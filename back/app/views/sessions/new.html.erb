<%= flash[:danger] %>
<div class="w-full max-w-xl container mt-24">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">

    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, class: 'shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline' %>

      <%= f.submit "ログイン", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full block" %>
      <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 mt-4 rounded focus:outline-none focus:shadow-outline w-full">
      <%= link_to 'ゲストログイン', application_pages_guest_sign_in_path, method: :post  %>
      </button>
    <% end %>

    <p>登録がまだの方 <%= link_to "新規登録", signup_path %></p>
  </div>
  </div>
