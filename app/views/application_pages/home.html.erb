<%= form_tag(search_path, :method => 'get') do %>
<%= text_field_tag :search %>
<%= submit_tag '検索', :name => nil %>
<% end %>

<h2>タグから検索</h2>
<ul class="tags-frame">
  <% @tags.each do |tag| %>
    <li class="btn-tag"><%= tag.name %></li>
  <% end %>
</ul>

<h2>新着質問</h2>
<%= render 'questions/question' %>
<%= link_to "一覧", questions_path %>
