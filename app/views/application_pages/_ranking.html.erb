<h2>いいね数ランキング</h2>
<% @rank.each.with_index(1) do |r,n| %>
<li>
<b><%= n %>位</b>
<%= r.name %>
  <div class="w-16 h-16 rounded-full">
    <% if r.image? %>
    <%= link_to (image_tag r.image.thumb.to_s),user_path(r.id) %>
    <% else %>
    <%= link_to (image_tag "default.png",class: "q-user-image"), user_path(r.id), method: :get,  alt:"ユーザーアイコン" %>
    <% end %>
    </div>
</li>
<% end %>

