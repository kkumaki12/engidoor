        <h3>過去の質問</h3>
        質問投稿数:<%= @user.questions.count %>回
        <% @user.questions.each do |question| %>
        <li id="question-board">
            <% if question.user.image? %>
            <%= link_to (image_tag question.user.image.thumb.to_s,class: "q-user-image"), user_path(question.user.id),method: :get  %>
            <% else %>
            <%= link_to (image_tag "default.png",class: "q-user-image"), user_path(question.user.id), method: :get,  alt:"ユーザーアイコン" %>
            <% end %>

            <span class="user"><%= link_to question.user.name,user_path(question.user.id) %></span>
            <span class="title"><%= link_to question.title, question_path(question) %></span>
            <span class="timestamp">
                <%= time_ago_in_words(question.created_at) %>前
            </span>
        </li>

        <% end %>
