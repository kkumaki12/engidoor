<% @questions.each do |question| %>
<li id="question-board">
    <% if question.user.image? %>
  <%= image_tag question.user.image.thumb.to_s, class: "q-user-image" %>
<% else %>
  <%= image_tag "default.png", class: "q-user-image", alt:"ユーザーアイコン" %>
<% end %>
   
    <span class="user"><%= link_to question.user.name %></span>
    <span class="title"><%= link_to question.title, question_path(question) %></span>
    <span class="timestamp">
        <%= time_ago_in_words(question.created_at) %>前
    </span>
</li>

<% end %>