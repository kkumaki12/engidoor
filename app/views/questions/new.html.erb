<div class="container">
    <div class="w-full max-w-3xl mx-auto">

        <%= form_with scope: :question, url: questions_path,class:"bg-white rounded px-8 pt-6 pb-8 mb-4", local: true do |f| %>
        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-semibold mb-2" for="title">
                タイトル
            </label>
            <%= f.text_field :title, class:"bg-gray-100 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",id:"title" %>

        </div>
        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-semibold mb-2" for="tag">
                タグ
            </label>
            <%= f.text_field :name,placeholder: "複数タグ付けする場合はスペースを開けてください",class:"bg-gray-100 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",id:"tag" %>
        </div>
        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-semibold mb-2" for="content">
                内容
            </label>
            <%= f.text_area :content,class:"bg-gray-100 p-1 appearance-none border rounded w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline",rows:"8",id:"content" %>
        </div>

        <div class="flex items-center justify-between">
            <%= f.submit "投稿する",class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>

        <% end %>
    </div>
</div>